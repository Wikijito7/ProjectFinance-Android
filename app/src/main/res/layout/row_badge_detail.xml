<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/row_badge_detail__img__icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:background="@drawable/bg_badge"
        android:importantForAccessibility="no"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white"
        tools:backgroundTint="@color/google_red"
        tools:src="@drawable/ic_beta" />

    <TextView
        android:id="@+id/row_badge_detail__label__badge_title"
        style="@style/Text.Bold.Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/row_badge_detail__img__icon"
        app:layout_constraintTop_toTopOf="@id/row_badge_detail__img__icon"
        app:layout_constraintBottom_toBottomOf="@id/row_badge_detail__img__icon"
        tools:text="Debug" />

    <TextView
        android:id="@+id/row_badge_detail__label__badge_desc"
        android:layout_width="0dp"
        style="@style/Text.Regular.Body1"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/row_badge_detail__label__badge_title"
        tools:text="This badge is given to users" />

</androidx.constraintlayout.widget.ConstraintLayout>